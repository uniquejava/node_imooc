extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th Name
						th Director
						th Country
						th Year
						th Create Date
						th View
						th Update
						th Delete
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td #{item.title}
							td #{item.director}
							td #{item.country}
							td #{item.year}
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td: a(target="_blank", href="../movie/#{item._id}") View
							td: a(target="_blank", href="../admin/update/#{item._id}") Update
							td
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") delete
	script(src="/js/admin.js")